package extra;

public class piggBank {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[]odd =new int[10];
		int[]even = new int[10];
		int input2 =2;
		int sum_odd = 0,sum_even=0;
		int sum = 0;
		for(int i=1;i<10;i=i+2)
		{
			odd[i] = input2;
			input2 = input2*2;
		}
		for(int i=1;i<10;i=i+2)
		{
			sum_odd+=odd[i];
		}
		input2 = 2;
		System.out.println(sum_odd);
		int j=1;
		for(int i=2;i<10;i=i+2)
		{
			//even[i] = input2;
			sum +=odd[j];
			j = j+2;
			input2 = sum/2;
			even[i] = input2;
		}
		for(int i=2;i<10;i=i+2)
		{
			sum_even +=even[i];
		}
	}

}
